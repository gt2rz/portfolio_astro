---
import ItemMenu from "./ItemMenu.astro";
import Logo from "./Logo.astro";
import Navigation from "./Navigation.astro";
---

<header
  class=`${Astro.props.class} flex top-0 fixed justify-between py-10 px-14 backdrop-blur-md z-50 w-full`
>
  <Logo />
  <Navigation />
  <section class="flex items-center">
    <ItemMenu
      class="p-2 text-white bg-orange-700/60 hover:bg-orange-700 hover:text-white rounded-lg cursor-pointer"
      title="Contact me"
      link="#contact"
    />
  </section>
</header>
