---
import GithubIcon from "@icons/GithubIcon.astro";
import LinkedinIcon from "@icons/LinkedinIcon.astro";
import SocialIcon from "@components/SocialIcon.astro";
---

<aside
  id="socials"
  class=`${Astro.props.class} fixed flex flex-col top-0 bottom-0 w-20 h-full left-8 py-[206px] justify-center`
>
  <SocialIcon href="https://github.com/gt2rz">
    <GithubIcon width="64" height="64" />
  </SocialIcon>
  <SocialIcon>
    <LinkedinIcon width="52" height="52" />
  </SocialIcon>
</aside>

<style>
  #socials::before,
  #socials::after {
    width: 1px;
    height: 100%;
    margin: 0 auto;
    content: "";
    background-color: rgba(255, 255, 255, 0.4);
  }

  #socials::before {
    margin-bottom: 50px;
  }

  #socials::after {
    margin-top: 50px;
  }
</style>
